        <!-- Contact Section -->
        <section id="ContactMe">
            <div class="Contact container">
                <!-- Contact Section Title -->
                <h1 class="sectionTitle">Contact Info</h1>
            </div>
            <div class="contactItems">
                <div class="contactItem">
                    <div class="contactInfo">
                        <form
                            action="#"
                            class="phpEmailForm"
                            method="post">
                        <p>Your Name</p>
                        <!-- Name Input Field -->
                        <input
                            type="text"
                            name="name"
                            placeholder="Please type your name here"
                            required>
                        <p>Your Email</p>
                        <!-- Email Input Field -->
                        <input  
                            type="email"
                            name="email"
                            placeholder="Please type your email here"
                            required>
                        <p>Your Number</p>
                        <!-- Phone Number Input Field -->
                        <input
                            type="tel"
                            name="tel"
                            maxlength="10"
                            minlength="10"
                            placeholder="Enter 10-digit number"
                            required>
                        <p>Message</p>
                        <!-- Message Textarea -->
                        <textarea   
                            style="height: 150px"                            
                            name="message"                            
                            required>
                        </textarea>
                        <div class="button">
                            <!-- Submit Button -->
                            <button class="button" type="submit">Submit</button>
                        </div>
                    </form>
                    </div>
                </div>
            </div>
        </section>
        <!-- End Contact Section -->

